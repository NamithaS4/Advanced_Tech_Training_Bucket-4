@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Smooth animated background */
        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #6a11cb, #2575fc, #ff6a00, #ffb347);
            background-size: 400% 400%;
            animation: smoothGradient 15s ease infinite;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
        }

        @@keyframes smoothGradient {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .login-wrapper {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 60px;
        }

        .login-card {
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-radius: 20px;
            padding: 35px 30px;
            width: 100%;
            max-width: 400px;
            color: #fff;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            text-align: center;
            animation: fadeInUp 1s ease;
        }

        @@keyframes fadeInUp {
            from {
                transform: translateY(30px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .login-card .header i {
            font-size: 3rem;
            color: #fff;
        }

        .login-card .header h4 {
            margin-top: 10px;
            font-weight: 600;
            letter-spacing: 1px;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.25);
            border: none;
            color: #fff;
            border-radius: 12px;
            padding: 10px 15px;
            margin-bottom: 15px;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                background: rgba(255, 255, 255, 0.35);
                outline: none;
                box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
            }

        .input-group-text {
            background: transparent;
            border: none;
            color: #fff;
        }

        .btn-login {
            background: linear-gradient(90deg, #2575fc, #6a11cb);
            border: none;
            width: 100%;
            padding: 12px;
            border-radius: 12px;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: linear-gradient(90deg, #6a11cb, #2575fc);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
            }

        .login-footer {
            text-align: center;
            margin-top: 15px;
            color: #eee;
            font-size: 0.9rem;
        }

            .login-footer a {
                color: #ffd700;
                text-decoration: none;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }
    </style>
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="header">
            <i class="bi bi-person-circle"></i>
            <h4>User Login</h4>
        </div>

        <div>
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" id="username" class="form-control" placeholder="Username" required />
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" id="password" class="form-control" placeholder="Password" required />
                </div>
            </div>

            <button id="btnLogin" class="btn btn-login mt-2">
                <i class="bi bi-door-open"></i> Login
            </button>
        </div>

        <div class="login-footer">
            <p>Forgot your password? <a href="#">Reset here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function (e) {
                e.preventDefault();
                const username = $("#username").val().trim();
                const password = $("#password").val().trim();
                if (!username || !password) { alert("Enter username & password"); return; }

                $.ajax({
                    url: "https://localhost:7204/api/Auth/Login",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ username, password }),
                    success: function (res) {
                        localStorage.setItem("jwtToken", res.token);
                        alert("✅ Login successful!");
                        window.location.href = "/Student/Index";
                    },
                    error: function (xhr) {
                        if (xhr.status === 401) alert("❌ Invalid username or password!");
                        else alert("⚠️ Error: " + xhr.responseText);
                    }
                });
            });
        });
    </script>
}
