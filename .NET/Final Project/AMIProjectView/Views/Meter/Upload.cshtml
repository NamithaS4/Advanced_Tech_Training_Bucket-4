@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Upload Meter Data";
}
<div class="row">
    <div class="col-12 col-lg-7 col-xl-6 mx-auto">
        <div class="card p-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h4 class="mb-0"><i class="bi bi-upload me-2"></i>Upload Meter Data</h4>
                <a asp-action="TemplateCsv" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-filetype-csv"></i> Template
                </a>
            </div>

            @if (TempData["err"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(TempData["err"]!)
                </div>
            }
            @if (TempData["msg"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["msg"]
                </div>
            }

            <form method="post" enctype="multipart/form-data" class="mt-2">
                <div class="mb-3">
                    <label class="form-label">CSV File (.csv)</label>
                    <input type="file" name="file" accept=".csv" class="form-control" required />
                    <div class="form-text">
                        Columns (header required):
                        <code>MeterSerialNo, ConsumerId, OrgUnitId, IPAddress, ICCID, IMSI, Manufacturer, Firmware, Category, InstallDate, Status</code>
                        <br />
                        <small>Dates: <code>yyyy-MM-dd</code> (preferred) or <code>dd-MM-yyyy</code>.</small>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-success"><i class="bi bi-cloud-upload"></i> Upload</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
