<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AMIProjectView</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AMIProjectView.styles.css" asp-append-version="true" />

    <style>
        :root {
            --brand: #7c0a2e; /* Consistent brand color */
        }

        body {
            background-color: #f6f7fb; /* Light background for consistency */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            box-shadow: 0 2px 4px rgba(0,0,0,.08); /* Subtle shadow for lift */
        }

        .navbar {
            background-color: var(--brand) !important; /* Use brand color for the main nav */
        }

        .navbar-brand, .nav-link {
            color: #fff !important; /* White text for contrast */
        }

            .nav-link:hover {
                color: #ffc107 !important; /* Yellow accent on hover */
            }

        .container {
            flex-grow: 1; /* Allows main content to push footer down */
            max-width: 1100px; /* Sets a max width for cleaner viewing */
        }

        .footer {
            background-color: #fff;
            padding: 1rem 0;
            box-shadow: 0 -1px 3px rgba(0,0,0,.05);
        }

            /* Override basic link color to match brand */
            .footer a {
                color: var(--brand);
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i>AMIProjectView
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - AMIProjectView - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>