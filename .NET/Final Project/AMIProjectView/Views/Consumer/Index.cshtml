@model List<AMIProjectView.Models.MeterViewModel>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "My Home";
    var meters = Model ?? new List<AMIProjectView.Models.MeterViewModel>();
    var pendingCount = ViewBag.PendingBillsCount as int? ?? 0;
    var pendingBills = ViewBag.PendingBills as List<AMIProjectView.Models.BillVm> ?? new List<AMIProjectView.Models.BillVm>();
    var thisMonthKwh = ViewBag.ThisMonthKwh as decimal? ?? 0m;
    var recentConsumption = ViewBag.RecentConsumption as List<AMIProjectView.Models.MonthlyConsumptionVm> ?? new List<AMIProjectView.Models.MonthlyConsumptionVm>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card p-3 mb-4">
                <h2 class="mb-0">Welcome 👋</h2>
                <p class="text-muted mb-0">Your meters and quick links are below.</p>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">My Meters</small>
                        <div class="h3 mb-0">@meters.Count</div>
                    </div>
                    <div class="text-muted" style="font-size:32px;">
                        <i class="bi bi-hdd"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Meters", "Consumer")">View my meters</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">Pending Bills</small>
                        <div class="h3 mb-0">@pendingCount</div>
                    </div>
                    <div class="text-muted" style="font-size:32px;">
                        <i class="bi bi-receipt"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Index", "Bills", new { status = "Pending" })">View bills</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3 h-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">This Month kWh</small>
                        <div class="h3 mb-0">@thisMonthKwh.ToString("0.##")</div>
                    </div>
                    <div class="text-muted" style="font-size:32px;">
                        <i class="bi bi-lightning-charge"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Consumption", "Consumer")">View consumption</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent items -->
    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Recent Pending Bills</h5>
                    <a href="@Url.Action("Index", "Bills", new { status = "Pending" })">See all</a>
                </div>

                @if (pendingBills.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Meter</th>
                                    <th>Month</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var b in pendingBills)
                                {
                                    <tr>
                                        <td>@b.MeterID</td>
                                        <td>@b.MonthStartDate.ToString("yyyy-MM")</td>
                                        <td class="text-end">@b.Amount.ToString("0.00")</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Details", "Bills", new { id = b.BillId })">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted">No pending bills.</div>
                }
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card p-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Recent Monthly Consumption</h5>
                    <a href="@Url.Action("Consumption", "Consumer")">See all</a>
                </div>

                @if (recentConsumption.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Meter</th>
                                    <th>Month</th>
                                    <th class="text-end">kWh</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in recentConsumption)
                                {
                                    <tr>
                                        <td>@r.MeterId</td>
                                        <td>@r.MonthStartDate.ToString("yyyy-MM")</td>
                                        <td class="text-end">@r.ConsumptionkWh.ToString("0.##")</td>
                                        <td class="text-end">
                                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Consumption", "Consumer")">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted">No consumption data for this month.</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // (optional) small script to add client-side interactivity later
    </script>
}
