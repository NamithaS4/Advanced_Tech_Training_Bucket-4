@model AMIProjectView.Models.MeterViewModel

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Meter Details";
}

<div class="card p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-hdd"></i> Meter Details</h4>
        <a class="btn btn-secondary" href="@Url.Action("Consumption", "Consumer")">Back</a>
    </div>

    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <dl class="row">
        <dt class="col-sm-3">Serial</dt>
        <dd class="col-sm-9">@Model?.MeterSerialNo</dd>

        <dt class="col-sm-3">IP Address</dt>
        <dd class="col-sm-9">@Model?.Ipaddress</dd>

        <dt class="col-sm-3">ICCID</dt>
        <dd class="col-sm-9">@Model?.Iccid</dd>

        <dt class="col-sm-3">IMSI</dt>
        <dd class="col-sm-9">@Model?.Imsi</dd>

        <dt class="col-sm-3">Manufacturer</dt>
        <dd class="col-sm-9">@Model?.Manufacturer</dd>

        <dt class="col-sm-3">Firmware</dt>
        <dd class="col-sm-9">@Model?.Firmware</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model?.Category</dd>

        <dt class="col-sm-3">Install Date</dt>
        <dd class="col-sm-9">@Model?.InstallDate??.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model?.Status</dd>
    </dl>
</div>
