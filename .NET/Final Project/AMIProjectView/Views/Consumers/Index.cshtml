@model List<AMIProjectView.Models.ConsumerVm>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Consumer Data";

    var page = ViewBag.Page as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var total = ViewBag.Total as int? ?? Model?.Count ?? 0;
}

<style>
    #consumerPageRoot {
        --content-max-width: 1200px;
        padding: 12px;
    }

        /* center the card and limit width to match Meter page */
        #consumerPageRoot .card {
            width: 100%;
            max-width: var(--content-max-width);
            margin: 0 auto;
            box-sizing: border-box;
        }

        /* make the table more compact and allow wrapping */
        #consumerPageRoot table {
            table-layout: auto;
            width: 100%;
            word-wrap: break-word;
            white-space: normal;
            font-size: 0.92rem;
        }

        #consumerPageRoot th,
        #consumerPageRoot td {
            vertical-align: middle;
            padding: 0.45rem 0.6rem;
            word-break: break-word;
        }

            /* constrain address and email so they don't force horizontal scroll */
            #consumerPageRoot td:nth-child(3),
            #consumerPageRoot td:nth-child(5) {
                max-width: 220px;
                overflow-wrap: anywhere;
                text-overflow: ellipsis;
            }

            /* tariff/status/ids can be narrower */
            #consumerPageRoot td:nth-child(1),
            #consumerPageRoot td:nth-child(6),
            #consumerPageRoot td:nth-child(7) {
                white-space: nowrap;
                max-width: 90px;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            /* keep action buttons on one line */
            #consumerPageRoot td.text-end {
                white-space: nowrap;
            }

        /* tighten up header controls spacing */
        #consumerPageRoot .d-flex.justify-content-between {
            gap: .5rem;
        }

    /* responsive tweaks */
    @@media (max-width: 991.98px) {
        #consumerPageRoot {
            padding-left: 8px;
            padding-right: 8px;
        }

            #consumerPageRoot .card {
                padding-left: 10px;
                padding-right: 10px;
            }

            #consumerPageRoot table {
                font-size: 0.85rem;
            }
    }
</style>

<div id="consumerPageRoot">
    <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0"><i class="bi bi-people"></i> Consumer Data</h4>
            <div class="d-flex gap-2 align-items-center">
                <small class="text-muted me-2">Total: @total</small>
                <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-lg"></i> Add</a>
            </div>
        </div>

        @if (TempData["err"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger">@Html.Raw(err)</div>
        }
        @if (TempData["msg"] is string msg && !string.IsNullOrWhiteSpace(msg))
        {
            <div class="alert alert-success">@msg</div>
        }

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Consumer ID</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Updated At</th>
                        <th>Updated By</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="12" class="text-muted">No consumers found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var c in Model)
                        {
                            <tr>
                                <td>@c.ConsumerId</td>
                                <td>@c.Name</td>
                                <td>@c.Address</td>
                                <td>@c.Phone</td>
                                <td>@c.Email</td>
                                <td>@c.Status</td>
                                <td>@c.CreatedAt?.ToString("dd-MM-yyyy HH:mm")</td>
                                <td>@c.CreatedBy</td>
                                <td>@c.UpdatedAt?.ToString("dd-MM-yyyy HH:mm")</td>
                                <td>@c.UpdatedBy</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@c.ConsumerId" class="btn btn-primary btn-sm me-1"><i class="bi bi-pencil"></i> </a>

                                    <form asp-action="Delete" asp-route-id="@c.ConsumerId" method="post" class="d-inline" onsubmit="return confirm('Delete this consumer?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- paging -->
        <nav aria-label="Page navigation" class="mt-2">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = page - 1, pageSize })">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize })">@i</a>
                    </li>
                }

                <li class="page-item @(page == totalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = page + 1, pageSize })">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
