@model AMIProjectView.Controllers.TariffVm
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Edit Tariff";
}

<div class="card p-4">
    <div class="d-flex align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Tariff</h4>
        <a class="btn btn-secondary ms-auto" href="@Url.Action("Index", "Tariff")">Back to list</a>
    </div>

    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="TariffId" />
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input asp-for="TariffName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Effective From</label>
            <input asp-for="EffectiveFrom" type="date" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Effective To (optional)</label>
            <input asp-for="EffectiveTo" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Base Rate</label>
            <input asp-for="BaseRate" type="number" step="0.01" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Tax Rate</label>
            <input asp-for="TaxRate" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="d-flex">
            <button class="btn btn-primary me-2">Save</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Tariff")">Cancel</a>
        </div>
    </form>
</div>
