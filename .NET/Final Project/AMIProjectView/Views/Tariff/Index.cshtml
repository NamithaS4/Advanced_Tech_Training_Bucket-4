@model List<AMIProjectView.Controllers.TariffVm>
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Tariff Data";
}
<div class="card p-4">
    <div class="d-flex align-items-center mb-3">
        <h4 class="mb-0"><i class="bi bi-lightbulb"></i> Tariff Data</h4>
        <button class="btn btn-success ms-auto" data-bs-toggle="modal" data-bs-target="#addTariff"><i class="bi bi-plus-lg"></i> Add Tariff</button>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Tariff ID</th>
                    <th>Name</th>
                    <th>Effective From</th>
                    <th>Effective To</th>
                    <th>Base Rate</th>
                    <th>Tax Rate</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.TariffId</td>
                        <td>@t.TariffName</td>
                        <td>@t.EffectiveFrom</td>
                        <td>@(t.EffectiveTo?.ToString() ?? "-")</td>
                        <td>@t.BaseRate</td>
                        <td>@t.TaxRate</td>
                        <td class="text-end">
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Tariff", new { id = t.TariffId })">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Tariff Modal (unchanged) -->
<div class="modal fade" id="addTariff" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Add" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Tariff</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-2"><label class="form-label">Name</label><input name="TariffName" class="form-control" required /></div>
                <div class="mb-2"><label class="form-label">Effective From</label><input name="EffectiveFrom" type="date" class="form-control" required /></div>
                <div class="mb-2"><label class="form-label">Effective To (optional)</label><input name="EffectiveTo" type="date" class="form-control" /></div>
                <div class="mb-2"><label class="form-label">Base Rate</label><input name="BaseRate" type="number" step="0.01" class="form-control" required /></div>
                <div class="mb-2"><label class="form-label">Tax Rate</label><input name="TaxRate" type="number" step="0.01" class="form-control" required /></div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success">Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>
