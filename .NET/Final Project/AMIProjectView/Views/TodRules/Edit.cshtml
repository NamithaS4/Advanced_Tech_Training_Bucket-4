@model AMIProjectView.Models.TodRuleVm
@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Edit TOD Rule";
}

<div class="card p-4" style="max-width:920px; margin:0 auto;">
    <h4 class="mb-3">Edit TOD Rule - @Model.Name</h4>

    @* Show any TempData messages *@
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success">@TempData["msg"]</div>
    }

    <form asp-action="Edit" method="post" class="row g-3">
        @Html.AntiForgeryToken()
        @* required so the controller knows which record to update *@
        <input type="hidden" asp-for="TodRuleId" />

        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">Start Time</label>
            @* time input binds to TimeSpan - format 'hh:mm' *@
            <input asp-for="StartTime" type="time" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label class="form-label">End Time</label>
            <input asp-for="EndTime" type="time" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Peak Type</label>
            <select asp-for="PeakType" class="form-select">
                <option value="">-- select --</option>
                <option>Peak</option>
                <option>Offpeak</option>
                <option>Shoulder</option>
            </select>
            <span asp-validation-for="PeakType" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Multiplier</label>
            <input asp-for="Multiplier" step="0.01" class="form-control" />
            <span asp-validation-for="Multiplier" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select">
                <option>Active</option>
                <option>Inactive</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @* client-side validation *@
    <partial name="_ValidationScriptsPartial" />
}
